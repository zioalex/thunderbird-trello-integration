{
  "name": "trello-task-creator-thunderbird",
  "version": "1.1.0",
  "description": "Thunderbird extension to create Trello tasks",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "validate": "npm run lint && npm run test",
    "build": "npm run validate && npm run package",
    "package": "rm -f trello-task-creator-extension.zip && zip -r trello-task-creator-extension.zip manifest.json background.js popup.html popup.js options.html options.js icons/ README.md -x '*.svg' '.*' 'node_modules/*' 'tests/*' 'coverage/*'",
    "version:patch": "./scripts/bump-version.sh patch",
    "version:minor": "./scripts/bump-version.sh minor",
    "version:major": "./scripts/bump-version.sh major",
    "version": "./scripts/bump-version.sh"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "web-ext": "^8.9.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!jest.config.js",
      "!coverage/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/thunderbird-trello-extension.git"
  },
  "keywords": [
    "thunderbird",
    "trello",
    "extension",
    "webextension"
  ],
  "author": "Your Name",
  "license": "MIT"
}
